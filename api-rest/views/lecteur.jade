doctype html
html(lang='fr')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
        link(rel='stylesheet', media='screen and (min-width: 701px) ', href='/stylesheets/styleDesktop.css')
        link(rel='stylesheet', media='screen and (max-width: 700px) ', href='/stylesheets/styleMobile.css')
        title Player
    
    body
        .audioplayer
            .visuel
            .infos
                .artiste= data.nomAuteur
                .titre= data.titre
            .waveform
            .controls
                button.prev
                button.play-pause.play
                button.next
                button.volume(data-value='90')
            .temps
                .en-cours 0:00
                .total= data.duree
            .statistiques
                .nb-lectures= data.nbEcoute
                .nb-commentaires= data.nbCommentaire
            .social
                button.like= data.nbLike
                button.share Share
    script(type='text/javascript', src='/javascripts/song.js')
    //- obligation de d√©clarer les variables dans un script inline
    script.
        let song = new Song(!{JSON.stringify(data.idPlage)},!{JSON.stringify(data.duree)}, !{JSON.stringify(data.peaks)}, !{JSON.stringify(data.cheminPochette)}, !{JSON.stringify(data.cheminMP3)});
    
    script(type='text/javascript', src='/javascripts/soundmanager/scripts/soundmanager2-jsmin.js')
    script(type='text/javascript', src="/javascripts/utility.js")
    script(type='text/javascript', src='/javascripts/Connexion.js')
    script(type='text/javascript', src="/javascripts/waveform/waveform.js")
    script(type='text/javascript', src="/javascripts/Player.js")
